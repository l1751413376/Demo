<UserControl x:Class="Beta.Controls.QXSpirit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d">
    <Canvas x:Name="Spirit">
        <Border x:Name="LifeBorder" Width="150" Height="150" BorderBrush="Red" BorderThickness="1" HorizontalAlignment="Left">
            <Canvas x:Name="ImgCanvas"  Width="{Binding Path=Width,ElementName=LifeBorder}" Height="{Binding Path=Height,ElementName=LifeBorder}">
                <Image x:Name="Body"/>
            </Canvas>
        </Border>
        <StackPanel Name="Description" Width="150" Height="58" Canvas.Top="130">
            <!--姓名-->
            <TextBlock x:Name="SName" FontSize="14" FontFamily="新宋体" HorizontalAlignment="Center" IsHitTestVisible="False" Text="色料色拉" Foreground="Green"/>
        </StackPanel>
    </Canvas>
</UserControl>

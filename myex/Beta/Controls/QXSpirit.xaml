<UserControl x:Class="Beta.Controls.QXSpirit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d">
    <Canvas x:Name="Spirit">
        <Image x:Name="Body" Width="150" Height="150"/>
        <StackPanel Name="Description" Width="150" Height="58" Canvas.Top="-21">
            <!--门派-->
            <TextBlock x:Name="Faction" FontSize="12" FontWeight="Bold" HorizontalAlignment="Center" IsHitTestVisible="False"/>
            <!--家族-->
            <TextBlock x:Name="Clan" FontSize="12" FontWeight="Bold" HorizontalAlignment="Center" IsHitTestVisible="False"/>
            <!--姓名-->
            <TextBlock x:Name="SName" FontSize="12" FontWeight="Bold" HorizontalAlignment="Center" IsHitTestVisible="False"/>
            
        </StackPanel>
    </Canvas>
</UserControl>
